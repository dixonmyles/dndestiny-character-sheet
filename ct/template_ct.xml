<?xml version="1.0" encoding="iso-8859-1"?>

<root>
	<template name="number_clientct_hp">
		<number_ct_static name="hptotal">
			<anchored to="shield" width="30" height="20">
				<top />
				<right anchor="left" offset="-10" />
			</anchored>
			<min value="0" />
			<script>
				function onValueChanged()
					window.onHealthChanged();
				end
			</script>
		</number_ct_static>
	</template>
  <template name="number_clientct_shield">
		<number_ct_static name="shield">
			<anchored to="overshield" width="30" height="20">
				<top />
				<right anchor="left" offset="-10" />
			</anchored>
			<color>0000AA</color>
			<script>
				function onValueChanged()
					window.onHealthChanged();
				end
			</script>
		</number_ct_static>
	</template>
  <template name="number_clientct_overshield">
		<number_ct_static name="overshield">
			<anchored to="wounds" width="30" height="20">
				<top />
				<right anchor="left" offset="-10" />
			</anchored>
			<color>0000AA</color>
			<script>
				function onValueChanged()
					window.onHealthChanged();
				end
			</script>
		</number_ct_static>
	</template>
</root>